<!--    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
<!--    <uses-permission android:name="android.permission.CAMERA" />-->

    <application
        android:name=".MnnApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidndk">
        <activity
            android:name=".feature.home.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.detect.BatchParseActivity"
            android:label="@string/activity_batch_parse"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.detect.AppendParseActivity"
            android:label="@string/activity_append_parse"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.search.SearchActivity"
            android:label="@string/activity_search_result"
            android:screenOrientation="portrait" />
    </application>

</manifest>